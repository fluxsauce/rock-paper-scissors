extends layout.pug

block content
  div(class='available')
    h2 Available Games
    if games.length > 0
      div(class='list-group')
        each game in games
          a(class='list-group-item list-group-item-action', href='/games/' + game.id) ##{game.id} - #{game.state}
    else
      p None... yet!

  p(class='lead float-right')
    form(method='POST' action='/games')
      button.btn.btn-lg.btn-secondary(type='submit') Start new
